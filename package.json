  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana"
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "workflow": {
        "kind": "rest",
        "credentials": {
          "destination": "Workflow_Trigger_Dest"
        }
      },
      "auth": "xsuaa",
      "destinations": true
    },
    "auth": {
      "passport": {
        "strategy": "JWT"
