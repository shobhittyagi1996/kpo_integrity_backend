  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/connectivity": "^3.20.0",
    "@sap-cloud-sdk/http-client": "^3.20.0",
    "@sap-cloud-sdk/resilience": "^3.20.0",
    "@sap-cloud-sdk/util": "^3.20.0",
